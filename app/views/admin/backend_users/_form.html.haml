= form.error_messages

.form
  %ul
    %li
      = form.label :username
      = form.text_field :username, :class => 'text'
    %li
      = form.label :email
      = form.text_field :email, :class => 'text'
    %li
      = form.label :password
      = form.password_field :password, :class => 'text'
    %li
      = form.label :password_confirmation
      = form.password_field :password_confirmation, :class => 'text'
    %li.last
      = form.label :role_ids, 'Rollen'
      - Role.backend.each do |r|
        .checkbox_listing
          = check_box_tag "backend_user[role_ids][]", r.id, @backend_user.roles.include?(r), {:id => "backend_user_role_ids_#{r.id}"}
          = label_tag "backend_user_role_ids_#{r.id}", r.name
